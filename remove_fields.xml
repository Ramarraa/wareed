<odoo>
    <data>
        <record id="view_prescription_order_form_custom" model="ir.ui.view">
            <field name="name">prescription.order.form.remove.fields</field>
            <field name="model">prescription.order</field>
            <field name="inherit_id" ref="acs_hms.view_hms_prescription_order_form"/>
            <field name="arch" type="xml">

                <field name="active_component_ids" position="replace"/>
                <field name="allow_substitution" position="replace"/>
                <field name="dose" position="replace"/>
                <field name="qty_per_day" position="replace"/>
                <field name="days" position="replace"/>
                <field name="qty_available" position="replace"/>
                <field name="quantity" position="replace"/>
            </field>
        </record>
    </data>
</odoo>
